/*******************************
         Theme Overrides
*******************************/

.ui.modal > .actions::after {
  display: block;
  height: 0;
  clear: both;
  content: '.';
  visibility: hidden;
}

.ui.modal {
  position: fixed;
  margin: 0 auto;
  transform: none;
}

.ui.active.modal {
  transform: none;
}

.ui.modal.gallery {
  padding-bottom: 1em;

  .image.content {
    flex-direction: column;
    align-items: center;

    img {
      margin-bottom: 16px;
    }
  }
}
